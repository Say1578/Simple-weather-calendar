<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/climatic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/climatic"
        android:supportsRtl="true"
        android:theme="@style/Theme.Weather">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Weather"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Добавленные активности без label -->
        <activity
            android:name=".modul.WeatherLocationSelector"
            android:theme="@style/Theme.Weather"
            android:screenOrientation="portrait" />

        <activity
            android:name=".modul.AppSettings"
            android:theme="@style/Theme.Weather"
            android:screenOrientation="portrait" />

        <activity
            android:name=".modul.FiveDayForecastActivity"
            android:theme="@style/Theme.Weather"
            android:screenOrientation="portrait" />
    </application>

</manifest>
